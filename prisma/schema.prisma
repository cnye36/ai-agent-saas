generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  agents    Agent[]
  workflows Workflow[]
}

model Agent {
  id          String   @id @default(cuid())
  name        String
  description String?
  config      Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  workflows   Workflow[]
}

model Workflow {
  id          String   @id @default(cuid())
  name        String
  description String?
  steps       Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  agent       Agent    @relation(fields: [agentId], references: [id])
  agentId     String
}

